{% from "pyduck/data/sidebar.html.jinja" import sidebar_community %}
{% from "pyduck/data/sidebar.html.jinja" import sidebar_learning %}
{% from "pyduck/data/sidebar.html.jinja" import sidebar_sotsog %}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <!-- Open Props -->
    <link rel="stylesheet" href="https://unpkg.com/open-props" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Tagify -->
    <link href="https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.css" rel="stylesheet" type="text/css" />

    <style>
        /* Bootstrap customization */
        .no-caret::after {
            display: none;
        }

        /* 
        stick footer 
        https://css-tricks.com/couple-takes-sticky-footer/#aa-there-is-flexbox
        */
        html,
        body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1 0 auto;
        }

        .footer {
            flex-shrink: 0;
        }

        .logo-color {
            background: var(--gradient-2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* ckeditor 5 cutomization */
        .ck.ck-content:not(.ck-comment__input *) {
            height: 300px;
            overflow-y: auto;
        }

        .answer .ck.ck-content:not(.ck-comment__input *) {
            height: 150px;
            overflow-y: auto;
        }
    </style>

    <style>
        .hero__title {
            background: var(--gradient-2);
            font-weight: var(--font-weight-9);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero__subtitle {
            background: var(--gradient-1);
            font-weight: var(--font-weight-7);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    </style>

    {% block css %}
    <style>
        .nav-item:hover {
            background-color: var(--bs-primary-bg-subtle);
        }

        .nav-item__learning:hover {
            background-color: var(--bs-info-bg-subtle);
        }

        .nav-item__sotsog:hover {
            background-color: var(--bs-success-bg-subtle);
        }
    </style>
    {% endblock css %}
</head>

<body>
    <header class="px-3 py-2 bg-body-tertiary">
        <div class="container-fluid">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <div class="fs-4 fw-bold">
                    <a href="/"
                       class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                        <span class="logo-color"><i class="bi bi-tropical-storm"></i>pyduck</span>
                    </a>
                </div>
                <div>
                    {% if current_user.is_authenticated %}
                    <div class="btn-group">
                        <button class="btn btn-outline-secondary border-0 rounded-circle dropdown-toggle no-caret p-2"
                                type="button"
                                data-bs-toggle="dropdown" data-bs-auto-close="true" aria-expanded="false"
                                data-bs-offset="0,5">
                            <img class="rounded-circle" src="{{ current_user.avatar.url }}"
                                 width="32" height="32">
                        </button>
                        <ul class="dropdown-menu dropdown-menu-start dropdown-menu-lg-end pt-0"
                            style="width:var(--size-fluid-9)">
                            <li class="bg-success-subtle rounded-2 py-3 px-2 border-bottom">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <img class="rounded-circle"
                                             src="{{ current_user.avatar.url }}" width="50"
                                             height="50">
                                    </div>
                                    <div class="ps-3">
                                        <div class="fw-bold">{{current_user.nickname}} </div>
                                        <div><small>{{ current_user.username }}</small></div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <hr class="dropdown-divider mt-0">
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center"
                                   href="{{ url_for('pyduck.auth.sign_out') }}">
                                    <div class="ps-3 fs-4 fw-bold">
                                        <i class="bi bi-box-arrow-right"></i>
                                    </div>
                                    <div class="ps-4">
                                        <span>로그아웃</span>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                    {% else %}
                    <button class="btn btn-outline-secondary rounded-0" data-bs-toggle="modal"
                            data-bs-target="#modal" x-data @click="$dispatch('modalsignup')">회원가입</button>
                    <button class="btn btn-outline-dark rounded-0 btn__signin" data-bs-toggle="modal"
                            data-bs-target="#modal"
                            x-data @click="$dispatch('modalsignin')">로그인</button>
                    {% endif %}
                </div>
            </div>
    </header>
    <div class="content container-fluid px-0">
        <div class="d-flex align-items-stretch h-100">
            <!-- [START] sidbar -->
            <div class="bg-body-tertiary" style="min-width:280px;">
                <div class="pt-5">
                    <button class="btn btn-outline-primary border-0 w-100 rounded-0" type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                        <div class="fw-bold fs-5">커뮤니티</div>
                    </button>
                    <div class="collapse show pt-1" id="collapseExample">
                        <ul class="nav flex-column nav-pills nav-fill">
                            {% for item in sidebar_community %}
                            <li class="nav-item text-start">
                                <a class="nav-link link-body-emphasis d-flex" aria-current="page"
                                   href="{{ url_for('pyduck.community.index', category=item.code) }}">
                                    <div class="ms-3" style="width: 30px;">{{ item.emoji }}</div>
                                    <div class="ps-3">{{ item.name }}</div>
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="pt-5">
                    <button class="btn btn-outline-info border-0 w-100 rounded-0" type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#learning" aria-expanded="false" aria-controls="collapseExample">
                        <div class="fw-bold fs-5">같이 배우기</div>
                    </button>
                    <div class="collapse show pt-1" id="learning">
                        <ul class="nav flex-column nav-pills nav-fill">
                            {% for item in sidebar_learning %}
                            <li class="nav-item nav-item__learning text-start">
                                <a class="nav-link link-body-emphasis d-flex" aria-current="page"
                                   href="{{ url_for('pyduck.community.index', category=item.code) }}">
                                    <div class="ms-3" style="width: 30px;">{{ item.emoji }}</div>
                                    <div class="ps-3">{{ item.name }}</div>
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="pt-5">
                    <button class="btn btn-outline-success border-0 w-100 rounded-0" type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#sotsog" aria-expanded="false" aria-controls="collapseExample">
                        <div class="fw-bold fs-5">거인의 어깨너머</div>
                    </button>
                    <div class="collapse show pt-1" id="sotsog">
                        <ul class="nav flex-column nav-pills nav-fill">
                            {% for item in sidebar_sotsog %}
                            <li class="nav-item nav-item__sotsog text-start">
                                <a class="nav-link link-body-emphasis d-flex" aria-current="page"
                                   href="{{ url_for('pyduck.community.index', category=item.code) }}">
                                    <div class="ms-3" style="width: 30px;">{{ item.emoji }}</div>
                                    <div class="ps-3">{{ item.name }}</div>
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <!-- sidebar [END] -->
            <div class="flex-grow-1">
                {% block main %}
                {% endblock main %}
            </div>
        </div>
    </div>
    <div class="footer">
        <footer class="container-fluid bg-body-tertiary pt-3">
            <div class="d-flex justify-content-between align-items-center py-3 border-top">
                <div>
                    &copy; 2023- pyduck. All rights reserved.
                </div>
                <div>
                    <a class="btn btn-outline-secondary border-0 px-2 py-1"
                       href="https://github.com/kssflow/csduck"
                       target="_blank">
                        <span class="fs-4"><i class="bi bi-github"></i></span>
                    </a>
                </div>
            </div>
        </footer>
    </div>
    <!-- [START] modal -->
    <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog"
             x-data="{ 
                template: '',
                username: '',
                loginRequired: false,
                showUsernameDontExist: false,
                showPasswordDontMatch: false,
                showNicknameExist: false,
                showUsernameExist: false,
                handlehtmx() {
                    htmx.process(document.body)
                },
                showSigninModal() {
                    let signin = document.querySelector('.btn__signin')
                    signin.click()
                }
            }"
             @modalsignup.document="template='signup'; $nextTick(() => {handlehtmx()})"
             @modalsignin.document="template='signin'; $nextTick(() => {handlehtmx()})"
             @nickname-exists="showNicknameExist=true"
             @username-exists="showUsernameExist=true"
             @user-created="template='user-created'"
             @username-dont-exist="showUsernameDontExist=true"
             @password-dont-match="showPasswordDontMatch=true"
             @login-required.document="showSigninModal">
            <template x-if="template === 'signup'">
                <div class="modal-content rounded-0">
                    <form hx-post="{{ url_for('pyduck.auth.sign_up') }}" hx-swap="none">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                        <div class="modal-header">
                            <h1 class="modal-title fw-bold fs-4" id="exampleModalLabel">
                                <span class="logo-color"><i class="bi bi-tropical-storm"></i>pyduck</span>
                            </h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div>
                                <div class="pt-3">
                                    <span class="fw-bold fs-4">👋 환영합니다!!</span>
                                    <br>회원가입을 위해 아래 양식을 작성해주세요.
                                </div>
                            </div>
                            <div class="pt-4 col-lg-9">
                                <div>
                                    <div class="form-floating">
                                        <input type="email" class="form-control rounded-0" id="username" name="username"
                                               placeholder="guido@python.com" x-model="username" required>
                                        <label for="username">이메일<sup class="fw-bold text-danger">*</sup></label>
                                    </div>
                                    <div class="ps-1">
                                        <small class="text-secondary">아이디 및 인증 용도(타인에게 비공개)</small>
                                    </div>
                                    <div class="pt-1 ps-2 text-danger" x-show="showUsernameExist">
                                        <i class="bi bi-x-circle"></i><span class="ps-1">이미 누군가 사용중인 이메일입니다.</span>
                                    </div>
                                </div>
                                <div class="pt-3">
                                    <div class="form-floating">
                                        <input type="password" class="form-control rounded-0" id="password"
                                               name="password" placeholder="비밀번호" minlength="8" maxlength="20" required>
                                        <label for="password">비밀번호<sup class="fw-bold text-danger">*</sup></label>
                                    </div>
                                    <div class="ps-1">
                                        <small class="text-secondary">8-20자, 공백 불가</small>
                                    </div>
                                </div>
                                <div class="pt-3">
                                    <div class="form-floating">
                                        <input type="text" class="form-control rounded-0" id="nickname" name="nickname"
                                               placeholder="닉네임" minlength="2" maxlength="20">
                                        <label for="nickname">닉네임<sup class="fw-bold text-danger">*</sup></label>
                                    </div>
                                    <div class="ps-1">
                                        <small class="text-secondary">2-20자, 공백 불가</small>
                                    </div>
                                    <div class="pt-1 ps-2 text-danger" x-show="showNicknameExist">
                                        <i class="bi bi-x-circle"></i><span class="ps-1">이미 누군가 사용중인 닉네임입니다.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <small class="text-secondary">회원가입 함에 따라, 개인정보정책 및 사이트운영방침에 동의한 것으로 간주합니다.</small>
                            <button class="btn btn-outline-dark rounded-0">
                                회원가입
                            </button>
                        </div>
                    </form>
                </div>
            </template>
            <template x-if="template === 'signin'">
                <div class="modal-content rounded-0">
                    <form hx-post="{{ url_for('pyduck.auth.sign_in') }}" hx-swap="none">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                        <div class="modal-header">
                            <h1 class="modal-title fw-bold fs-4" id="exampleModalLabel">
                                <span class="logo-color"><i class="bi bi-tropical-storm"></i>pyduck</span>
                            </h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div>
                                <div class="pt-3">
                                    <span class="fw-bold fs-4">👋 어서오세요!!</span>
                                    <br>방문해주셔서 감사합니다.
                                </div>
                            </div>
                            <div class="pt-4 col-lg-9">
                                <div>
                                    <div class="form-floating">
                                        <input type="email" class="form-control rounded-0" id="username" name="username"
                                               placeholder="guido@python.com" required>
                                        <label for="username">이메일</label>
                                    </div>
                                    <div class="pt-1 ps-2 text-danger" x-show="showUsernameDontExist">
                                        <i class="bi bi-x-circle"></i><span class="ps-1">존재하지 않는 사용자입니다.</span>
                                    </div>
                                </div>
                                <div class="pt-3">
                                    <div class="form-floating">
                                        <input type="password" class="form-control rounded-0" id="password"
                                               name="password" placeholder="비밀번호" required>
                                        <label for="password">비밀번호</label>
                                    </div>
                                    <div class="pt-1 ps-2 text-danger" x-show="showPasswordDontMatch">
                                        <i class="bi bi-x-circle"></i><span class="ps-1">비밀번호가 일치하지 않습니다.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-outline-dark rounded-0">
                                로그인
                            </button>
                        </div>
                    </form>
                </div>
            </template>
            <template x-if="template === 'user-created'">
                <div class="modal-content rounded-0">
                    <div class="modal-header">
                        <h1 class="modal-title fw-bold fs-4" id="exampleModalLabel">
                            <span class="logo-color"><i class="bi bi-tropical-storm"></i>pyduck</span>
                        </h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="pt-3">
                            <span class="fw-bold fs-4">📨 인증메일 전송 완료!!</span>
                            <div class="pyduck-para pt-3 text-secondary">
                                [<span x-text="username"></span>]으로 인증 메일을 전송 하였습니다.
                                메일 내의 인증 링크를 클릭하시면 회원가입이 완료됩니다.
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-outline-dark rounded-0" data-bs-dismiss="modal" aria-label="Close">
                            창 닫기
                        </button>
                    </div>
                </div>
            </template>
        </div>
    </div>
    <!-- modal [END] -->
    <!-- [START] 3rd-party javascript -->
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <!-- htmx -->
    <script src="https://unpkg.com/htmx.org@1.9.0"
            integrity="sha384-aOxz9UdWG0yBiyrTwPeMibmaoq07/d3a96GCbb9x60f3mOt5zwkjdbcHFnKH8qls"
            crossorigin="anonymous"></script>
    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.12.0/dist/cdn.min.js"></script>
    <!-- CKEditor 5 -->
    <script
            src="{{ url_for('pyduck.static', filename='thirdparties/ckeditor5-37.1.0-a7xjj5vlqip/build/ckeditor.js') }}"></script>
    <!-- Tagify -->
    <script src="https://cdn.jsdelivr.net/npm/@yaireo/tagify"></script>
    <script src="https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.polyfills.min.js"></script>
    <!-- 3-rd party javascript [END] -->
    {% block javascript %}
    {% endblock javascript %}
</body>

</html>